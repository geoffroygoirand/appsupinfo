<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nouvelle Formation</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('nav') %>

  <div class="container mt-5">
    <h1 class="mb-4">Ajouter une Nouvelle Formation</h1>
    <form action="/formations" method="POST">
      <div class="form-group">
        <label for="title">Titre</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="form-group">
        <label for="start_at">Date de début</label>
        <input type="date" class="form-control" id="start_at" name="start_at" required>
      </div>
      <div class="form-group">
        <label for="end_at">Date de fin</label>
        <input type="date" class="form-control" id="end_at" name="end_at" required>
      </div>
      <div class="form-group">
        <label for="employeeId">Employé</label>
        <select class="form-control" id="employeeId" name="employeeId" required>
          <% employees.forEach(function(employee) { %>
            <option value="<%= employee._id %>"><%= employee.name %></option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
